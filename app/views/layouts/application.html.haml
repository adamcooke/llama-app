!!!
%html
  %head
    %title= page_title.reverse.join(' - ')
    = stylesheet_link_tag 'application/application', :media => 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
    %meta{:name => 'turbolinks-cache-control', :content => "no-cache"}
    %link{:href => "https://fonts.googleapis.com/css?family=Raleway:300,400,600,700|Source+Code+Pro:400,600", :rel => 'stylesheet'}
    %link{:href => asset_path('favicon.png'), :rel => 'shortcut icon'}
  %body
    = display_flash
    = yield

